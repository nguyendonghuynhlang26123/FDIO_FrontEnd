<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="vm"
            type="com.team3.fdiosystem.viewmodels.FoodItemVM" />
    </data>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/card_holder"
        android:clickable="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="16dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="6dp"
        card_view:contentPaddingLeft="16dp"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="3">

            <ImageView
                android:id="@+id/salad_img"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="2"
                android:visibility="visible"
                imgMenuContent="@{vm.imgUrl}"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/menu_item_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="@{vm.price}"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/menu_item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        tools:text="@{vm.name}" />

                </LinearLayout>

                <Button
                    android:id="@+id/addBtn"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_weight="1"
                    android:text="Add"
                    tools:text="Add"
                    android:onClick="@{()->vm.addItemToCart()}"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>