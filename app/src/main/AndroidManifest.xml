        <activity android:name=".activities.CartActivity" />

        <service
            android:name=".repositories.services.MyFirebaseService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
